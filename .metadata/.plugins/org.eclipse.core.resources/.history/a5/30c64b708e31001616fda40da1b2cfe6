
public class MoreEscapeSequences {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print( "Cost\t\t Quantity\t\t Total\t\t\n");
		System.out.print( "$1,000.00\t\t   4\t\t\t $4,000.00      \n");
		System.out.print( "$   50.00\t\t   8\t\t\t   $400.00      \n");
		System.out.print( "\n");
		System.out.print( "________________________________________________________\n");
		System.out.print( "TOTAL:\t\t     12\t\t\t $4,400.00\n");
		
		
	}

}


//Cost      Quantity   Total
//$1,000.00   4       $4,000.00
//$   50.00   8         $400.00
//______________________________
//TOTAL:      12      $4,400.00